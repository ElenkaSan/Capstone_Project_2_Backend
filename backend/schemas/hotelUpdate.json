{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.hotel.com/hotelUpdate.schema.json",
    "type": "object",
    "properties": {
      "hotelName": {
        "type": "string",
        "minLength": 1,
        "maxLength": 50
      },
      "roomType": {
        "type": "string"
      },
      "checkInDate": {
        "type": "string"
      },
      "checkOutDate": {
        "type": "string"
      },
      "numberOfGuests": {
        "type": "integer"
      },
      "roomsNumber": {
        "type": "integer"
      },
      "price": {
        "type": "integer",
        "minimum": 0
      },
      "currency": {
        "type": "string"
      }
    },
    "additionalProperties": false,
    "required": []
  }